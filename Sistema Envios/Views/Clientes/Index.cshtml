@model IEnumerable<Sistema_Envios.Models.tbClientes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-tools">
                       @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary"})
                    </div>
                </div>
                  <br />
                <div class="ibox-content">
                  <table class="table table-responsive" id="DataTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.client_Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.client_Identidad)</th>
                            <th>@Html.DisplayNameFor(model => model.client_Sexo)</th>
                            <th>@Html.DisplayNameFor(model => model.client_Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.client_Saldo)</th>
                            <th>@Html.DisplayNameFor(model => model.client_LimiteCredito)</th>
                            <th>@Html.DisplayNameFor(model => model.client_Descuento)</th>
                            <th>@Html.DisplayNameFor(model => model.tbEstadosCiviles.est_Descripcion)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) {
                        <tr class="gradeA odd" role="row" data-id="@item.client_ID">
                            <td>
                                @Html.DisplayFor(modelItem => item.client_Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.client_Identidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.client_Sexo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.client_Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.client_Saldo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.client_LimiteCredito)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.client_Descuento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbEstadosCiviles.est_Descripcion)
                            </td>
                            <td>
                              @Html.ActionLink("Detalles", "Details", new { id=item.client_ID },  new {@class = "btn btn-default btn-xs" })
                              @Html.ActionLink("Editar", "Edit", new { id=item.client_ID }, new {@class = "btn btn-primary btn-xs" })
                              @Html.ActionLink("Delete", "Delete", new { id=item.client_ID }, new { @class = "btn btn-secondary btn-xs" })
                            </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
    
