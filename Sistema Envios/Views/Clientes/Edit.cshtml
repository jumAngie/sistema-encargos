@model Sistema_Envios.Models.tbClientes

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    

    <div class="card-header bg-warning">
        <div class="text-center">
            <h4 style="color:azure">EDITAR CLIENTES</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.client_ID)

        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6">
                <br />
                <div class="form-group">
                    <label>Nombre del cliente</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.client_Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.client_Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <br />
                <div class="form-group">
                    <label>IDENTIDAD</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.client_Identidad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.client_Identidad, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="col-sm-6">
                <br />
                <div class="form-group">
                    <label>ESTADO CIVIL</label>
                    <div class="col-md-10">
                        @Html.DropDownList("client_EstadoCivil", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.client_EstadoCivil, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <br />
                <div class="form-group">
                    <label>SEXO ("F" si es Femenino, "M" si es masculino)</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.client_Sexo, new { htmlAttributes = new { @class = "form-control", @maxlength = "1" } })
                        @Html.ValidationMessageFor(model => model.client_Sexo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="col-sm-6">
                <br />
                <div class="form-group">
                    <label>NUMERO TELEFONICO</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.client_Telefono, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.client_Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <br />
                <div class="form-group">
                    <label>SALDO</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.client_Saldo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.client_Saldo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <br />
                <div class="form-group">
                    <label>CREDITO</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.client_LimiteCredito, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.client_LimiteCredito, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <br />
                <div class="form-group">
                    <label>DESCUENTO</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.client_Descuento, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.client_Descuento, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
    </div>


        <div class="row">
            <div class="col-sm-10">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
                <br />
                <div class="col-sm-6">
                    <br />
                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>

                </div>

            </div>
        </div>
    


                }

                
