@model IEnumerable<Sistema_Envios.Models.tbArticulos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-tools">
                       @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary"})
                    </div>
                </div>
                  <br />
                <div class="ibox-content">
                  <table class="table table-responsive" id="DataTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.art_Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.art_Stock)</th>
                            <th>@Html.DisplayNameFor(model => model.art_FechaCreacion)</th>
                            <th>@Html.DisplayNameFor(model => model.art_FechaMod)</th>
                            <th>@Html.DisplayNameFor(model => model.art_Estado)</th>
                            <th>@Html.DisplayNameFor(model => model.tbFabricas.fab_Descripcion)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) {
                        <tr class="gradeA odd" role="row" data-id="@item.art_ID">
                            <td>
                                @Html.DisplayFor(modelItem => item.art_Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.art_Stock)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.art_FechaCreacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.art_FechaMod)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.art_Estado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbFabricas.fab_Descripcion)
                            </td>
                            <td>
                              @Html.ActionLink("Detalles", "Details", new { id=item.art_ID },  new {@class = "btn btn-default btn-xs" })
                              @Html.ActionLink("Editar", "Edit", new { id=item.art_ID }, new {@class = "btn btn-primary btn-xs" })
                              @Html.ActionLink("Delete", "Delete", new { id=item.art_ID }, new { @class = "btn btn-secondary btn-xs" })
                            </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
    
