@model IEnumerable<Sistema_Envios.Models.tbPedidoDetalles>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-tools">
                       @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary"})
                    </div>
                </div>
                  <br />
                <div class="ibox-content">
                  <table class="table table-responsive" id="DataTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.art_ID)</th>
                            <th>@Html.DisplayNameFor(model => model.det_Cantidad)</th>
                            <th>@Html.DisplayNameFor(model => model.det_FechaCrea)</th>
                            <th>@Html.DisplayNameFor(model => model.det_FechaModif)</th>
                            <th>@Html.DisplayNameFor(model => model.det_Estado)</th>
                            <th>@Html.DisplayNameFor(model => model.tbPedidos.pedi_Code)</th>
                            <th>@Html.DisplayNameFor(model => model.tbUsuarios.usu_Usuario)</th>
                            <th>@Html.DisplayNameFor(model => model.tbUsuarios1.usu_Usuario)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) {
                        <tr class="gradeA odd" role="row" data-id="@item.det_Id">
                            <td>
                                @Html.DisplayFor(modelItem => item.art_ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.det_Cantidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.det_FechaCrea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.det_FechaModif)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.det_Estado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbPedidos.pedi_Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuarios.usu_Usuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuarios1.usu_Usuario)
                            </td>
                            <td>
                              @Html.ActionLink("Detalles", "Details", new { id=item.det_Id },  new {@class = "btn btn-default btn-xs" })
                              @Html.ActionLink("Editar", "Edit", new { id=item.det_Id }, new {@class = "btn btn-primary btn-xs" })
                              @Html.ActionLink("Delete", "Delete", new { id=item.det_Id }, new { @class = "btn btn-secondary btn-xs"})
                            </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
    
