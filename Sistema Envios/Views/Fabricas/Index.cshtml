@model IEnumerable<Sistema_Envios.Models.V_INDEX_FABRICAS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <!-- Button trigger modal -->
                        <button class="btn btn-primary">Nuevo</button>
                        <br />
                        <label style="color:red">@Html.ValidationMessage("Validacion")</label>

                    </div>
                </div>
                <br />
                <div class="ibox-content">
                    <table class="table table-responsive" id="DataTable">
                        <thead>
                            <tr role="row">
                                <th>@Html.DisplayNameFor(model => model.ID)</th>
                                <th>@Html.DisplayNameFor(model => model.NOMBRE)</th>

                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA odd" role="row" data-id="@item.ID">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NOMBRE)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Detalles", "Details", new { id = item.ID }, new { @class = "btn btn-default btn-xs" })
                                        @*@Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-primary btn-xs" })*@
                                        <button class="btn-delete btn btn-secondary btn-xs" data-id="@item.ID">Eliminar</button>

                                        <button class='btn btn-secondary btn-xs' type='submit' id="tbnModal" onclick="AbrirModal(@item.ID)"><i class='fas fa-pen'></i>Editar</button>

                                        <form method="post">
                                            @Html.AntiForgeryToken()
                                            <div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="Crear-Articulos" aria-hidden="true">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="crear-cargos">Fabricas</h5>
                                                            <label hidden id="lblMensaje3" name="lblMensaje3">Los campos son requeridos!!</label>
                                                        </div>
                                                        <div class="modal-body">
                                                            <label> Fabrica </label>
                                                            <input type="text" name="txtFabrica" id="txtFabrica" class="form-control" />
                                                            <label>Telefono </label> <label hidden id="lblMensaje2" name="lblMensaje2">El campo no puede estar vacio!!</label>
                                                            <input type="number" name="txtTelefono" id="txtTelefono" class="form-control" />

                                                        </div>
                                                        <div class="modal-footer">
                                                            <input type="hidden" id="fab_ID" />
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Cerrar()">Close</button>
                                                            <input type="submit" value="Editar" id="btnEditar" name="btnEditar" onclick="Editar(@item.ID)" class="btn btn-default" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </form>

                                        <script src="~/Scripts/EditarFabricas.js"></script>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("CrearFabrica")

@Html.Partial("EliminarFabrica")