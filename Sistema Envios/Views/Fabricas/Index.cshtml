@model IEnumerable<Sistema_Envios.Models.tbFabricas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-tools">
                       @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary"})
                    </div>
                </div>
                  <br />
                <div class="ibox-content">
                  <table class="table table-responsive" id="DataTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.fab_Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.fab_Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.fab_FechaCreacion)</th>
                            <th>@Html.DisplayNameFor(model => model.fab_FechaMod)</th>
                            <th>@Html.DisplayNameFor(model => model.fab_Estado)</th>
                            <th>@Html.DisplayNameFor(model => model.tbUsuarios.usu_Usuario)</th>
                            <th>@Html.DisplayNameFor(model => model.tbUsuarios1.usu_Usuario)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) {
                        <tr class="gradeA odd" role="row" data-id="@item.fab_ID">
                            <td>
                                @Html.DisplayFor(modelItem => item.fab_Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fab_Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fab_FechaCreacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fab_FechaMod)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fab_Estado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuarios.usu_Usuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuarios1.usu_Usuario)
                            </td>
                            <td>
                              @Html.ActionLink("Detalles", "Details", new { id=item.fab_ID },  new {@class = "btn btn-default btn-xs" })
                              @Html.ActionLink("Editar", "Edit", new { id=item.fab_ID }, new {@class = "btn btn-primary btn-xs" })
                              @Html.ActionLink("Delete", "Delete", new { id=item.fab_ID }, new { @class="btn btn-secondary btn-xs"})
                            </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
    
