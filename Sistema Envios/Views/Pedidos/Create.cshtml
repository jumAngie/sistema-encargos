

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<h2> AGREGANDO NUEVO PEDIDO </h2>

<div class="card-header bg-warning">
    <div class="text-center">
        <h4 style="color:azure">Pedidos</h4>
    </div>
</div>
<div class="card-body">
    <div class="row">
        <div class="col-sm-6">
            <label>CODIGO</label> <label style="color:red" id="lblCodigo">  El campo es requerido!!</label>
            <input type="text" id="txtCodigo" name="txtCodigo" class="form-control" maxlength="6"/>
        </div>

        <div class="col-sm-6">
            <label>COSTO DE ENVIO</label>  <label style="color:red" id="lblCosto">  El campo es requerido!!</label>
            <input type="number" id="txtCosto" name="txtCosto" class="form-control" />
        </div>

        <div class="col-sm-6">
            <label>FECHA DE ENVIO</label><label style="color:red" id="lblFecha">  El campo es requerido!!</label>
            <input type="date" class="form-control" id="txtFecha" name="txtFecha" />
        </div>

        <div class="col-sm-6">
            <label>ENCARGADO</label>  <label style="color:red" id="lblEncargado">  El campo es requerido!!</label>
            <select id="encargado" name="encargado" class="form-control">
            </select>
        </div>

        <div class="col-sm-6">
            <label>CLIENTE</label>  <label style="color:red" id="lblCliente">  El campo es requerido!!</label>
            <select id="cliente" name="cliente" class="form-control">
            </select>

        </div>

        <div class="col-sm-6">
            <label>ESTADO DEL ENVIO</label> <label style="color:red" id="lblEstado">  El campo es requerido!!</label>
            <select id="estado" name="estado" class="form-control">
            </select>
        </div>

        <div class="col-sm-6">
            <label>DIRECCION</label>  <label style="color:red" id="lblDireccion">  El campo es requerido!!</label>
            <select id="direccion" name="direccion" class="form-control">
            </select>
        </div>

    </div>
</div>




<div class="col-sm-10">
    <div class="text-center">
        <input type="button" value="Guardar" class=" btn btn-warning" onclick="Guardar()" />
        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default" })
        <br />
        </div>
    </div>


    <script src="~/Scripts/CrearPedido.js"></script>
