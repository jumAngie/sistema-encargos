@model Sistema_Envios.Models.tbPedidos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header bg-warning">
            <div class="text-center">
                <h4 style="color:azure">Pedidos</h4>
            </div>
        </div>
        <div class="card-body">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pedi_Code, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" class="form-control" id="pedi_Code" name="pedi_Code" />
                            @Html.ValidationMessageFor(model => model.pedi_Code, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pedi_DireccionID, "pedi_DireccionID", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <select class="form-control" id="pedi_DireccionID" name="pedi_DireccionID"></select>
                            @Html.ValidationMessageFor(model => model.pedi_DireccionID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pedi_CostoEnvio, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="number" class="form-control" id="pedi_CostoEnvio" name="pedi_CostoEnvio" />
                            @Html.ValidationMessageFor(model => model.pedi_CostoEnvio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.estv_Id, "estv_Id", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <select class="form-control" id="estv_Id" name="estv_Id"></select>
                            @Html.ValidationMessageFor(model => model.estv_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.emp_Id, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <select class="form-control" id="emp_Id" name="emp_Id"></select>
                            @Html.ValidationMessageFor(model => model.emp_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pedi_Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="date" class="form-control" id="pedi_Fecha" name="pedi_Fecha" />
                            @Html.ValidationMessageFor(model => model.pedi_Fecha, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <br />
        <div class="text-center">
            <input type="submit" value="Create" class="btn btn-warning" />
            <button class="btn btn-default">
                @Html.ActionLink("Volver a la lista", "Index")
            </button>
        </div>
        <br />
    </div>
}

<script src="~/Scripts/CrearPedido.js"></script>
