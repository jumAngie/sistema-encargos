<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
    <title>Error Page | Nifty - Admin Template</title>

    <!-- STYLESHEETS -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~--- -->
    <!-- Fonts [ OPTIONAL ] -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS [ REQUIRED ] -->
    <link href="~/Content/assets1/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Nifty CSS [ REQUIRED ] -->
    <link href="~/Content/assets1/css/nifty.min.css" rel="stylesheet" />

    <!-- Premium line icons [ OPTIONAL ] -->
    <link href="~/Content/assets1/premium/icon-sets/icons/line-icons/premium-line-icons.min.css" rel="stylesheet" />

    <!-- Premium solid icons [ OPTIONAL ] -->
    <link href="~/Content/assets1/premium/icon-sets/icons/solid-icons/premium-solid-icons.min.css" rel="stylesheet" />


</head>

<body class="">

    <!-- PAGE CONTAINER -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <div id="root" class="root front-container">

        <!-- CONTENTS -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <section id="content" class="content">
            <div class="content__boxed card rounded-0 w-100 min-vh-100 d-flex flex-column align-items-stretch justify-content-center">
                <div class="content__wrap">

                    <div class="text-center">
                        <div class="error-code page-title mb-3" style="color:orange">404</div>
                        <h3 class="mb-4">
                            <div class="badge bg-info">¡El proceso no se pudo completar!</div>
                        </h3>
                    </div>
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        @Html.ActionLink("Página Principal", "Principal", "Login", new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </section>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- END - CONTENTS -->
    </div>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- END - PAGE CONTAINER -->

</body>

</html>

