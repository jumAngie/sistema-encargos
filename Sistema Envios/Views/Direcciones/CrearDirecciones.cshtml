<style>
    .modal-header, h4 {
        background-color: #ffffff;
        /*color: white !important;*/
        text-align: center;
        color:black;
        font-size: 22px;
    }

    .modal-footer {
        background-color: white;
    }
</style>
<div class="modal fade" id="Direc" tabindex="-1" role="dialog" aria-labelledby="Crear-Direc" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="padding:30px 50px;">
                <h3 class="modal-title" id="crear-Direc">Añadir Direcciones</h3>
                <img src="https://cdn.dribbble.com/users/1200451/screenshots/8759739/ezgif.com-optimize.gif" width="150" />
            </div>
            <div class="modal-body" style="padding:40px 50px; background-color:white; column-count: 2">
                <div>
                    <label id="lblClienteID" style="color:red; display:none">*</label>
                    <label style="color:black">Escoga el cliente</label>
                    <select id="client_ID" name="client_ID" class="form-control" style="border-color:black"></select>

                    <label id="lblDirec" style="color:red; display:none">*</label>
                    <label style="color:black">Ingrese la dirección exacta</label>
                    <input type="text" name="txtDirec" id="txtDirec" class="form-control" style="border-color:black" />
                </div>
                <div>
                    <label id="lblDep_ID" style="color:red; display:none">*</label>
                    <label style="color:black">Escoja el Departamento</label>
                    <select id="dep_ID" name="dep_ID" class="form-control" style="border-color:black"></select>

                    <label id="lblCiu_ID" style="color:red; display:none">*</label>
                    <label style="color:black">Escoja la Ciudad</label>
                    <select id="ciu_ID" name="ciu_ID" class="form-control" style="border-color:black"></select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancelar" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a id="btn-insertar" onclick="Insertar()"  class="btn btn-warning">Insertar</a>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/CrearDirec.js"></script>