
@{
    ViewBag.Title = "paginaError";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="content" class="content">
    <div class="content__header content__boxed rounded-0">
        <div class="content__wrap">

            <div class="pt-5 mb-4 text-center">
                <div class="error-code page-title mb-3">500</div>
                <h3 class="mb-4">
                    <div class="badge bg-danger">¡Error del servidor!</div>
                </h3>
                <p class="lead">Ha ocurrido un error en la matrix.</p>
            </div>
        </div>

    </div>

    <div class="content__boxed">
        <div class="content__wrap">

            <!-- Search form -->
            <div class="col-md-8 offset-md-2 py-4">
                <form class="searchbox input-group">
                    <input class="searchbox__input form-control form-control-lg" type="search" placeholder="Type for search . . ." aria-label="Search">
                    <div class="searchbox__btn-group">
                        <button class="searchbox__btn btn btn-icon shadow-none border-0 btn-sm" type="submit">
                            <i class="demo-pli-magnifi-glass"></i>
                        </button>
                    </div>
                </form>
            </div>
            <!-- END : Search form -->
            <!-- Action buttons -->
            <div class="d-flex justify-content-center gap-3">
                <a href="@Html.ActionLink("Principal", "Login")" class="btn btn-primary">Regresar al inicio</a>
            </div>
            <!-- END : Action buttons -->

        </div>
    </div>

</section>
