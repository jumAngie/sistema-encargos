
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS [ REQUIRED ] -->
    <link rel="stylesheet" href="~/Content/assets/css/bootstrap.min.css">

    <!-- Nifty CSS [ REQUIRED ] -->
    <link rel="stylesheet" href="~/Content/assets/css/nifty.min.css">

    <!-- Nifty Demo Icons [ OPTIONAL ] -->
    <link rel="stylesheet" href="~/Content/assets/css/demo-purpose/demo-icons.min.css">

    <!-- Demo purpose CSS [ DEMO ] -->
    <link rel="stylesheet" href="~/Content/assets/css/demo-purpose/demo-settings.min.css">
    <link rel="stylesheet" href="~/Content/fondodelcolordelaimagen.css"/>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css">
</head>
<body>
    <section>
        <form action="@Url.Action("Index")" method="post" class="needs-validation" novalidate>
            <div class="row">
                <div class="col-sm-1">
                </div>
                <div class="col-sm-4">
                    <br /><br /><br /><br /><br />
                    <div class="card mb-3">
                        <div class="card-header bg-warning" style="color:azure">
                            <div class="text-center"><h3 style="color:azure">CAS Envíos</h3></div>
                        </div>
                        <div class="card-body">
                            <!-- Profile picture and short information -->
                            <div class="text-center position-relative">
                                <div class="pt-2 pb-3">
                                    <img class="img-lg rounded-circle" src="~/Content/assets/img/profile-photos/5.png" alt="Profile Picture" loading="lazy">
                                </div>
                            </div>
                            <!-- END : Profile picture and short information -->
                            <div class="row">
                                <div class="col-sm-1"></div>
                                <div class="col-sm-10">
                                    <label>Usuario</label>
                                    <input type="text" name="txtUsuario" class="form-control" placeholder="Ingrese su usuario" style="border-color:black" />
                                    <label style="color:red">@Html.ValidationMessage("Validacion")</label> <br />
                                    <label>Contraseña</label>
                                    <input type="password" name="txtPass" class="form-control" placeholder="Ingrese su contraseña" style="border-color:black" />
                                    <label style="color:red">@Html.ValidationMessage("Validacion")</label> <br />
                                    <div class="d-flex justify-content-center gap-2">
                                    <button type="submit" class="btn btn-primary">Ingresar</button>
                                    </div>
                                </div>
                                <div class="col-sm-1"></div>
                            </div>
                            <br />
                            <div class="d-flex justify-content-center gap-2">
                                <a>@Html.ActionLink("¿Olvidaste tu contraseña?", "OlvidarContraseña", "Login", null, new { @class = "btn btn-warning btn-xs" })</a>
                                <div class="pli-right-to-left">
                                    <a>@Html.ActionLink("Cambiar contraseña", "CambiarContraseña", "Login", null, new { @class = "btn btn-warning btn-xs" })</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-7">
                    <br />
                    <div>
                        <img src="https://th.bing.com/th/id/R.d8e3ddf80433803795407d3e906fcd76?rik=PlWvV936neTdCg&riu=http%3a%2f%2fmimosyregalos.com.py%2findex_archivos%2fimage3067.gif&ehk=ez0XnVra5BE%2bOjIzZ63vktwxjhzQVdJ%2b%2fGTqOtbaa%2fA%3d&risl=&pid=ImgRaw&r=0" />
                    </div>
                </div>
            </div>
        </form>
    </section>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="~/Content/assets/vendors/popperjs/popper.min.js" defer></script>

    <!-- Bootstrap JS [ OPTIONAL ] -->
    <script src="~/Content/assets/vendors/bootstrap/bootstrap.min.js" defer></script>

    <!-- Nifty JS [ OPTIONAL ] -->
    <script src="~/Content/assets/js/nifty.js" defer></script>

    <!-- Nifty Settings [ DEMO ] -->
    <script src="~/Content/assets/js/demo-purpose-only.js" defer></script>
    <script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
</body>
</html>

<script type="text/javascript">
    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    window.onunload = function () { null };
</script>